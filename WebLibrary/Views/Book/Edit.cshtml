@model WebLibrary.Books

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>//изм.изобр. на survey page
    $(document).ready(function () {
        $('select').on('change', function (e) {
            console.log();  
            var imageId = $(this).val()
            //$('img').load("/Book/PreEdit?data=" + $(this).val())
            $.ajax({
                type: "GET",
                data: { id: imageId },
                url: "/Book/PreEdit",
                success: function (data) {
                    console.log(data)
                    $('#imgDiv').html('<img style=\'width: 80px; height: 60px;\' src=\"data:image/jpeg;base64,'+data+ '"/>')
                },
                error: function (response, error) {
                    alert(response.responseText + " - " + error);
                }
            });
        });

    });
</script>
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Books</h4>
    <hr />
