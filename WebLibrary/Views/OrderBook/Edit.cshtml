@model WebLibrary.ViewModels.OrderBookVM
@using WebLibrary.ViewModels
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<BookVM> list = (List<BookVM>)ViewBag.OrderedBookList;
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>OrderBooks</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.UsersId, "UsersId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("UsersId", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.DropDownListFor(m => m.UsersId, ViewBag.UserList as SelectList)
                @Html.ValidationMessageFor(model => model.UsersId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BooksId, "BooksId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("BooksId", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.DropDownListFor(m => m.BooksId, ViewBag.BookList as SelectList)
                @Html.ValidationMessageFor(model => model.BooksId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Html.Partial("Partial/_Top5Orders", list)
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
