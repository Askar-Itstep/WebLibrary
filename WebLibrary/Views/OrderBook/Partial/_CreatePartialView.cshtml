@model WebLibrary.ViewModels.OrderBookVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>

@using (Ajax.BeginForm("Create", new AjaxOptions { UpdateTargetId = "AjaxOrderTable", HttpMethod = "Post",
                                                    Url="/OrderBook/Create"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>OrderBooks</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UsersId, "UsersId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.UsersId, ViewBag.UserList as SelectList)
                @Html.ValidationMessageFor(model => model.UsersId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BooksId, "BooksId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.BooksId, ViewBag.BookList as SelectList)
                @Html.ValidationMessageFor(model => model.BooksId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" @*onclick = "$('#exampleModalScrollable').modal('hide')"*@ class="btn btn-default" />
            </div>
            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
